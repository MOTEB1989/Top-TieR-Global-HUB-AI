FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# تثبيت مكتبات إضافية للـ LLM API
RUN pip install fastapi uvicorn openai anthropic requests

COPY llm_client.py llm_api.py ./

CMD ["uvicorn", "llm_api:app", "--host", "0.0.0.0", "--port", "5000"]
