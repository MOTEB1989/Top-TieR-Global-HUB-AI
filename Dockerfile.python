FROM python:3.11-slim
WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY committee_service.py gpt_client.py providers.py example.py __init__.py ./
COPY utils ./utils

EXPOSE 8000
CMD ["uvicorn", "committee_service:app", "--host", "0.0.0.0", "--port", "8000"]
