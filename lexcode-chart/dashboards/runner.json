{
  "id": null,
  "title": "Runner Metrics",
  "timezone": "browser",
  "panels": [
    {
      "type": "graph",
      "title": "Tasks Executed per Minute",
      "targets": [
        {
          "expr": "rate(runner_tasks_total[1m])",
          "legendFormat": "Tasks/min"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Task Duration (seconds)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(runner_task_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Failures (%)",
      "targets": [
        {
          "expr": "rate(runner_failures_total[5m]) / rate(runner_tasks_total[5m]) * 100",
          "legendFormat": "Failures"
        }
      ],
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 }
    }
  ],
  "schemaVersion": 16,
  "version": 1
}
