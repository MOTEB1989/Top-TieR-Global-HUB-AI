{
  "id": null,
  "title": "Gateway Overview",
  "timezone": "browser",
  "panels": [
    {
      "type": "graph",
      "title": "Requests per Second",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"gateway\"}[1m])",
          "legendFormat": "RPS"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Response Latency (ms)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"gateway\"}[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Error Rate (%)",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"gateway\",status=~\"5..\"}[5m]) / rate(http_requests_total{job=\"gateway\"}[5m]) * 100",
          "legendFormat": "Errors"
        }
      ],
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 }
    }
  ],
  "schemaVersion": 16,
  "version": 1
}
