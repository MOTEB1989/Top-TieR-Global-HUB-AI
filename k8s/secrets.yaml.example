apiVersion: v1
kind: Secret
metadata:
  name: neo4j-auth
  labels:
    app: neo4j
type: Opaque
stringData:
  # Neo4j connection details
  url: "bolt://neo4j:7687"
  username: "neo4j"
  password: "your-secure-password-here"
  auth: "neo4j/your-secure-password-here"
---
apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  labels:
    app: core
type: Opaque
stringData:
  # Database connection
  database-url: "postgresql://postgres:postgres@postgres:5432/app_db"
  redis-url: "redis://redis:6379/0"
---
apiVersion: v1
kind: Secret
metadata:
  name: osint-secrets
  labels:
    app: osint
type: Opaque
stringData:
  # OSINT API credentials
  api-key: "your-osint-api-key-here"
  social-media-api-key: "your-social-media-api-key-here"