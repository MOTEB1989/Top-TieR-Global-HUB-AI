{
  "id": null,
  "title": "Knowledge Base Metrics",
  "timezone": "browser",
  "panels": [
    {
      "type": "graph",
      "title": "Queries per Minute",
      "targets": [
        {
          "expr": "rate(kb_queries_total[1m])",
          "legendFormat": "QPM"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Indexed Documents",
      "targets": [
        {
          "expr": "kb_indexed_documents_total",
          "legendFormat": "Docs"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Indexing Latency (s)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(kb_indexing_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 }
    }
  ],
  "schemaVersion": 16,
  "version": 1
}
